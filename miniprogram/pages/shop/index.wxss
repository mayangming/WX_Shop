/* pages/shop/index.wxss */
.shop_root{
  width: 90%;
  height: auto;
  display: flex;
  background-color: #FFFFFF;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
  flex-direction: column;
}
.shop_search_out{
  width: 100%;
  height: 80rpx;
  font-size: 35rpx;
  line-height: 28rpx;
  border-radius: 20rpx;
  background-color: #F8F8F8;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  align-items: center;
}
.shop_search_icon{
  width: auto;
  height: auto;
  margin-right: 10rpx;
  margin-top: 15rpx;
}
.shop_search_input{
 width: 80%;
 height: 80rpx;
}
.shopItem{
  width: auto;
  height: auto;
  display: flex;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.shopItemHeadIcon{
  width: 148rpx;
  height: 148rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}
.shopItemMsg{
  width: auto;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.shopItemName{
  font-size: 40rpx;
}
.shopItemPrice{
  font-size: 35rpx;
}